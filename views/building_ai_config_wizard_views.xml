<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================= -->
    <!-- WIZARD - Configuración de Asistente IA                         -->
    <!-- ============================================================= -->

    <!-- Vista Form: Wizard de Configuración IA -->
    <record id="building_ai_config_wizard_view_form" model="ir.ui.view">
        <field name="name">building.ai.config.wizard.form</field>
        <field name="model">building.ai.config.wizard</field>
        <field name="arch" type="xml">
            <form string="Asistente IA — Configuración">
                <sheet>
                    <!-- Banner de advertencia si no puede editar -->
                    <div class="alert alert-info" role="alert" invisible="can_edit">
                        <i class="fa fa-info-circle" title="Información"/>
                        <strong>Modo Lectura:</strong> 
                        Solo el Director o Administrador de Obra puede modificar esta configuración.
                    </div>

                    <group>
                        <group string="Contexto">
                            <field name="company_id"/>
                            <field name="work_id"/>
                            <field name="use_work_override" readonly="not can_edit"/>
                            <field name="can_edit" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- ============================================= -->
                        <!-- TAB: Gemini                                   -->
                        <!-- ============================================= -->
                        <page string="Gemini (Google)" name="gemini">
                            <group>
                                <group>
                                    <field name="gemini_status" widget="badge" decoration-success="gemini_status == 'configured'" decoration-muted="gemini_status == 'not_configured'"/>
                                    <field name="gemini_last4" string="Últimos 4 dígitos" invisible="gemini_status != 'configured'"/>
                                </group>
                            </group>
                            <group string="Configuración" invisible="not can_edit">
                                <group>
                                    <field name="gemini_api_key" password="True" placeholder="AIza..." help="Ingrese su API Key de Google AI Studio"/>
                                    <field name="gemini_model"/>
                                </group>
                            </group>
                            <div class="oe_button_box mt-3">
                                <button name="action_test_gemini_connection" type="object" string="Probar Conexión" class="btn-secondary" icon="fa-plug"/>
                            </div>
                        </page>

                        <!-- ============================================= -->
                        <!-- TAB: OpenAI / ChatGPT                         -->
                        <!-- ============================================= -->
                        <page string="ChatGPT (OpenAI)" name="openai">
                            <group>
                                <group>
                                    <field name="openai_status" widget="badge" decoration-success="openai_status == 'configured'" decoration-muted="openai_status == 'not_configured'"/>
                                    <field name="openai_last4" string="Últimos 4 dígitos" invisible="openai_status != 'configured'"/>
                                </group>
                            </group>
                            <group string="Configuración" invisible="not can_edit">
                                <group>
                                    <field name="openai_api_key" password="True" placeholder="sk-..." help="Ingrese su API Key de OpenAI"/>
                                    <field name="openai_model"/>
                                </group>
                            </group>
                            <div class="oe_button_box mt-3">
                                <button name="action_test_openai_connection" type="object" string="Probar Conexión" class="btn-secondary" icon="fa-plug"/>
                            </div>
                        </page>
                    </notebook>

                    <!-- Nota al pie -->
                    <div class="mt-4 text-muted" style="font-size: 0.85em;">
                        <i class="fa fa-shield" title="Seguridad"/>
 
                        Las llaves se cifran y se aplican por compañía/obra según permisos.
                    </div>
                </sheet>
                <footer>
                    <button name="action_save" type="object" string="Guardar" class="btn-primary" invisible="not can_edit"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard -->
    <record id="building_ai_config_wizard_action" model="ir.actions.act_window">
        <field name="name">Asistente IA — Configuración</field>
        <field name="res_model">building.ai.config.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
