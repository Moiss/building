<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================= -->
    <!-- VISTA FORM: Costo Operativo (Rediseño UX profesional)         -->
    <!-- Flujo: Descripción → Obra → Tipo → Cantidad → Costo → Guardar -->
    <!-- ============================================================= -->
    <!-- ============================================================= -->
    <!-- VISTA FORM: Gasto Adicional (Rediseño UX profesional)         -->
    <!-- Flujo: Descripción → Obra → Datos → Importes → Guardar        -->
    <!-- ============================================================= -->
    <record id="view_building_work_cost_form" model="ir.ui.view">
        <field name="name">building.work.cost.form</field>
        <field name="model">building.work.cost</field>
        <field name="arch" type="xml">
            <form string="Gasto Adicional">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_view_evidences" type="object" class="oe_stat_button" icon="fa-camera">
                            <div class="o_stat_info">
                                <field name="evidence_count" class="o_stat_value"/>
                                <span class="o_stat_text">Evidencias</span>
                            </div>
                        </button>
                    </div>
                    <!-- Título principal -->
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Ej: Silicón, Clavos 2 pulgadas, Resistol blanco..."/>
                        </h1>
                    </div>

                    <!-- Fila de KPIs: Badge Tipo + Monto Total -->
                    <div class="row mb-3 mt-3">
                        <div class="col-6">
                            <div style="padding: 12px 20px; background: #EEF2FF; border-radius: 8px; border-left: 4px solid #6366F1;">
                                <strong style="font-size: 16px; color: #4338ca;">
                                    <i class="fa fa-info-circle"/>
 Gasto Adicional / Indirecto
                                </strong>
                                <small class="text-muted d-block mt-1">Gastos operativos no planificados (caja chica, materiales menores)</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div style="padding: 12px 20px; background: #F0FDF4; border-radius: 8px; border-left: 4px solid #22C55E;">
                                <small class="text-muted d-block">Monto Total</small>
                                <h3 style="margin: 0; color: #16A34A;">
                                    <field name="amount" widget="monetary"/>
                                </h3>
                                <field name="currency_id" invisible="1"/>
                            </div>
                        </div>
                    </div>

                    <!-- Grupo principal: Datos esenciales -->
                    <group>
                        <group string="Datos del Gasto">
                            <field name="work_id"/>
                            <field name="stage_id" domain="[('work_id', '=', work_id)]" required="1"/>
                            <field name="date"/>
                        </group>
                        <group string="Importes">
                            <field name="product_id" string="Producto" required="1"/>
                            <field name="qty" string="Cantidad"/>
                            <field name="unit_cost" string="Costo Unitario"/>
                        </group>
                    </group>

                    <!-- Clasificación Presupuestaria (Opcional) -->
                    <group string="Clasificación Presupuestaria">
                        <field name="budget_line_id" domain="[('work_id', '=', work_id)]"/>
                        <div class="alert alert-info" role="alert" colspan="2" style="margin-bottom: 0;">
                            <i class="fa fa-info-circle"/>
 
                            Opcional: vincule a una partida del presupuesto si este gasto corresponde a alguna.
                        </div>
                    </group>

                    <!-- Notebook: Notas -->
                    <notebook>
                        <page string="Notas" name="notes">
                            <field name="description" placeholder="Contexto del gasto: ubicación, proveedor, justificación..."/>
                        </page>
                    </notebook>

                    <!-- Campos invisibles -->
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="cost_type" invisible="1"/>
                    <field name="uom_id" invisible="1"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================================= -->
    <!-- VISTA LIST: Gastos Adicionales                                -->
    <!-- ============================================================= -->
    <record id="view_building_work_cost_list" model="ir.ui.view">
        <field name="name">building.work.cost.list</field>
        <field name="model">building.work.cost</field>
        <field name="arch" type="xml">
            <list string="Gastos Adicionales">
                <field name="date"/>
                <field name="name"/>
                <field name="work_id" column_invisible="context.get('default_work_id')"/>
                <field name="stage_id"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="unit_cost" optional="hide"/>
                <field name="amount" sum="Total"/>
                <field name="budget_line_id" optional="hide"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- ============================================================= -->
    <!-- VISTA SEARCH: Gastos Adicionales                              -->
    <!-- ============================================================= -->
    <record id="view_building_work_cost_search" model="ir.ui.view">
        <field name="name">building.work.cost.search</field>
        <field name="model">building.work.cost</field>
        <field name="arch" type="xml">
            <search string="Buscar Gastos">
                <field name="name"/>
                <field name="work_id"/>
                <field name="product_id"/>
                <field name="budget_line_id"/>
                <separator/>
                <filter string="Hoy" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Este Mes" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="Obra" name="grp_work" context="{'group_by': 'work_id'}"/>
                <filter string="Etapa" name="grp_stage" context="{'group_by': 'stage_id'}"/>
                <filter string="Producto" name="grp_product" context="{'group_by': 'product_id'}"/>
                <filter string="Fecha" name="grp_date" context="{'group_by': 'date:month'}"/>
            </search>
        </field>
    </record>

    <!-- ============================================================= -->
    <!-- ACCIÓN (Única y Genérica)                                     -->
    <!-- ============================================================= -->
    <record id="action_building_work_cost" model="ir.actions.act_window">
        <field name="name">Gastos Adicionales</field>
        <field name="res_model">building.work.cost</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_building_work_cost_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registre los gastos adicionales de sus obras.
            </p>
            <p>
                Gastos indirectos, caja chica, materiales menores, etc.
            </p>
        </field>
    </record>
</odoo>
