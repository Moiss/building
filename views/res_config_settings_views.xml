<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.building</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Control de Obras" string="Control de Obras" name="building_dashboard">
                    <block title="Contabilidad Analítica" name="building_analytic_setting_container">
                        <setting string="Contabilidad Analítica por Obra" help="Permite generar cuentas analíticas por obra y partida, y asignar gastos automáticamente.">
                            <field name="building_use_analytic"/>
                            <div class="content-group" invisible="not building_use_analytic">
                                <div class="row mt16">
                                    <label for="building_analytic_mode" class="col-lg-3 o_light_label"/>
                                    <field name="building_analytic_mode"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                    <block title="Seguridad IA" name="building_encryption_container">
                        <setting string="Clave de Cifrado" help="Clave maestra para cifrar las API Keys de los proveedores de Inteligencia Artificial. No la pierda.">
                            <field name="building_encryption_key" password="True"/>
                            <div class="mt8">
                                <button name="action_generate_encryption_key" type="object" string="Generar Nueva Clave" icon="fa-key" class="btn-secondary" confirm="ADVERTENCIA: Generar una nueva clave hará que las API Keys configuradas previamente dejen de funcionar. ¿Desea continuar?"/>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_building_config_settings" model="ir.actions.act_window">
        <field name="name">Configuración</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="context">{'module': 'building_dashboard'}</field>
    </record>

    <menuitem id="building_menu_config_settings" name="Configuración" parent="building_menu_config" action="action_building_config_settings" sequence="0"/>
</odoo>
