<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_building_inherit" model="ir.ui.view">
        <field name="name">account.move.form.building.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Botón en Header -->
            <xpath expr="//header" position="inside">
                <button name="action_open_allocate_wizard" type="object" string="Aplicar a Obra" icon="fa-building" class="oe_highlight" invisible="move_type not in ('in_invoice', 'in_refund') or state != 'posted' or is_fully_allocated"/>
            </xpath>

            <!-- Smart Button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_building_allocations" type="object" class="oe_stat_button" icon="fa-building" invisible="building_allocation_count == 0">
                    <field name="building_allocation_count" widget="statinfo" string="Obras"/>
                </button>
            </xpath>

            <!-- Badge (Opción: visible en un grupo) -->
            <xpath expr="//group" position="before">
                <div class="alert alert-info" role="alert" style="margin-bottom: 20px;" invisible="not has_building_allocation or is_fully_allocated">
                    <i class="fa fa-info-circle"/>
                    Esta factura tiene distribuciones parciales a obras.
                </div>
                <div class="alert alert-success" role="alert" style="margin-bottom: 20px;" invisible="not is_fully_allocated">
                    <i class="fa fa-check-circle"/>
                    Factura completamente distribuida a obras.
                </div>
            </xpath>

        </field>
    </record>
</odoo>
